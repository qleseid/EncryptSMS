<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">@color/item_color_accent</item>
    </style>

    <style name="FloatingButtonStyle" parent="@android:style/Widget.Button">
        <item name="colorAccent">#f1511b</item>
    </style>

    <style name="RecyclerStyle">
        <item name="android:background">#808283</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbarSize">10dp</item>
    </style>

    <style name="ItemListStyle">
        <item name="colorAccent">#FFC107</item>
        <item name="android:textColor">#8A2424</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextPrimary">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="textSize">primary</item>
    </style>

    <style name="TextSecondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="textSize">secondary</item>
    </style>

    <style name="TextTertiary">
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="textSize">tertiary</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>

        <!-- This needs to be set so that we can tint the toolbar and not change the background
         resource. This is mainly so that QkReplyActivity can call setClipToOutline -->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ToolbarText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="textSize">toolbar</item>
    </style>

    <style name="SwitchCompactStyle">
        <item name="trackTint">@color/switch_color_selector</item>
        <item name="thumbTint">@color/toolbarLight</item>
    </style>

</resources>