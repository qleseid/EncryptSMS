<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.encryptsms">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_encrypt_sms"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_encrypt_sms_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name="com.example.encryptsms.TitleActivity"
            android:label="@string/title_activity_title"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <!-- TODO:: Complete email sending method -->

                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.encryptsms.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.encryptsms.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="com.example.encryptsms.MainActivity"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.encryptsms.MainActivity"/>
        </activity>
    </application>

</manifest>